!function(e){e.fn.imageReloader=function(a){a=e.extend({},a,{loadingClass:"loading-image",reloadTime:1500,maxTries:10});var i=e(this);if(i.length>1)return i.each(function(i,t){e(t).imageReloader(a)}),i;i.data("reload-times",0);var t=i.height(),r=i.width(),n=e('<div class="'+a.loadingClass+'">');n.css({height:t,width:r}),n.hide(),n.insertAfter(i);var o=function(){i.show(),n.remove()};return i.bind("error",function(){i.hide(),n.show();var e=i.data("reload-times");e<a.maxTries?setTimeout(function(){i.attr("src",i.attr("src"));var e=i.data("reload-times");e++,i.data("reload-times",e)},a.reloadTime):i.is(":visible")||(o(),i.attr("alt","Image not found"))}),i.bind("load",function(){o()}),this}}(jQuery);